<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_regtangle_line_radius"
        android:layout_margin="6dp"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="14dp"
            app:layout_constraintStart_toEndOf="@+id/img_country_item_flag"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_country_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextBold"
                android:text="Belgium"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/tv_country_item_subregion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextRegular"
                android:text="Western Europe"
                android:layout_marginBottom="6dp"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/tv_country_item_capital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextLight"
                android:text="Capital : Brussels"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/tv_country_item_population"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextLight"
                android:text="Population : 11319511"
                android:layout_gravity="start"/>

        </LinearLayout>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/img_country_item_flag"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/example_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_iconfinder_double_arrow_right_1954526"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>