<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="14dp"
        android:weightSum="16"
        android:background="@color/colorDetailBackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_country_detail_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_background"
            android:layout_gravity="center"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:layout_weight="9"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/lineTop"
            android:layout_width="240dp"
            android:layout_height="0.7dp"
            android:layout_gravity="center"
            android:background="@color/colorLine"
            android:layout_marginVertical="10dp"/>

        <TextView
            android:id="@+id/tv_country_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextMedium"
            android:layout_weight="1"
            android:text="Belgium"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_country_detail_subregion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextRegular"
            android:text="Western Europe"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"/>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLine"
            android:layout_marginBottom="30dp" />

        <TextView
            android:id="@+id/tv_country_detail_capital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextLight"
            android:drawableStart="@drawable/ic_iconfinder_capital"
            android:text="Capital :"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/tv_country_detail_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextLight"
            android:text="Area : "
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_iconfinder_area"
            android:layout_gravity="start"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/tv_country_detail_population"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextLight"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_iconfinder_population"
            android:text=" Population :"
            android:layout_gravity="start"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/tv_country_detail_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextLight"
            android:layout_weight="1"
            android:text="Languages :"
            android:drawableStart="@drawable/ic_iconfinder_language"
            android:layout_gravity="start"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/tv_country_detail_borders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextLight"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:layout_marginBottom="20dp"
            android:drawableStart="@drawable/ic_iconfinder_borders"
            android:gravity="center"
            android:text="Borders : " />

    </LinearLayout>

</layout>