<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_country_detail_flag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_country_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextBold"
            android:text="Belgium"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/tv_country_detail_subregion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextRegular"
            android:text="Western Europe"
            android:layout_marginBottom="6dp"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/tv_country_detail_capital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextLight"
            android:text="Capital : Brussels"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/tv_country_detail_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextLight"
            android:text="Area : "
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/tv_country_detail_population"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextLight"
            android:text="Population :"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/tv_country_detail_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextLight"
            android:text="Languages :"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/tv_country_detail_borders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextLight"
            android:text="Borders : "
            android:layout_gravity="start"/>

    </LinearLayout>

</layout>